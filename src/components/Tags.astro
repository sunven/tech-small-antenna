---
import type { MarkdownFrontmatterType } from '../content.config'

type Props = Pick<MarkdownFrontmatterType, 'tags'>

const { tags } = Astro.props
---

<div class="flex flex-wrap gap-2">
  {
    tags.map(tag => (
      <a
        href={`/tags/${tag}`}
        class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xm font-semibold me-2 px-2.5 py-0.5 rounded-sm dark:bg-gray-700 dark:text-blue-400 inline-flex items-center justify-center"
      >
        #{tag}
      </a>
    ))
  }
</div>
